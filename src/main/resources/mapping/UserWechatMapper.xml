<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookkeeping.mapper.UserWechatMapper">

    <select id="wechatIsExit"  resultType="long" parameterType="string">
        select user_id
        from user_wechat
        where open_id = #{openId}
    </select>

    <select id="findUserWechat" resultType="com.bookkeeping.entity.UserWechat">
        select *
        from user_wechat
        where user_id = #{userId}
    </select>

    <insert id="createWechatUser">
        insert into user_wechat(open_id,name,gender,head_url,user_id)
        values (#{openId},#{name},#{gender},#{headUrl},#{userId})
    </insert>

    <update id="updateWechatUserId">
        update user_wechat
        set user_id = #{newUserId}
        where user_id = #{oldUserId}
    </update>

</mapper>